
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

int main() {
    float valor;
    int escolha;
    float desconto = 0;

    printf("Digite o valor da compra: ");
    scanf("%f", &valor);

    if (valor > 100) {
        printf("Informe o dia da semana (1. Segunda, 2. TerÃ§a, ..., 7. Domingo): ");
        scanf("%d", &escolha);

        int diaDeSemana = (escolha >= 1 && escolha <= 5); 

        if (diaDeSemana) {
            desconto = valor * 0.10; 
        } else {
            desconto = valor * 0.15; 
        }

        printf("Desconto aplicado: R$ %.2f\n", desconto);
        valor -= desconto;
    } else {
        printf("Nenhum desconto empregado\n");
    }

    printf("Valor total da compra: R$ %.2f\n", valor);

    return 0;
}
